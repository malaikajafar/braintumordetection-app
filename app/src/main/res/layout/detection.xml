<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:clipToOutline="true"
        android:background="@drawable/rounded_transparent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brain Tumor Detection"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload your MRI scan and let our AI analyze it for potential tumors"
            android:textColor="#D1D5DB"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />


        <Button
            android:id="@+id/btnViewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ View Profile"
            android:backgroundTint="#E0E6F8"
            android:textColor="#000000"

            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnStartDetection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§  Start Detection"
            android:backgroundTint="#E0E6F8"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnDashboard"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="ðŸ“Š Dashboard"
            android:backgroundTint="#E0E6F8"

            android:textColor="#000000"
            android:textSize="17sp" />

    </LinearLayout>

</RelativeLayout>
