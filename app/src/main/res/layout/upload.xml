<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_transparent"
        android:clipToOutline="true">

        <!-- Title -->
        <TextView
            android:id="@+id/uploadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload MRI Scan"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/uploadSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your MRI scan image"
            android:textSize="18sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="20dp" />

        <!-- Choose File Button -->
        <Button
            android:id="@+id/chooseFileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose File"
            android:textSize="18sp"
            android:textColor="#000000"
            android:backgroundTint="#BBDEFB"
            android:layout_marginBottom="14dp"
            android:contentDescription="Choose an MRI scan image from device" />

        <!-- Selected File Text -->
        <TextView
            android:id="@+id/selectedFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No file chosen"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="14dp" />

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:contentDescription="Preview of selected MRI scan image" />

        <!-- Analyze Button -->
        <Button
            android:id="@+id/analyzeScanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analyze Scan"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#64748B"
            android:contentDescription="Analyze the selected MRI scan image" />


    </LinearLayout>
</LinearLayout>
