<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:clipToOutline="true"
        android:background="@drawable/rounded_transparent">

        <!-- Title -->
        <TextView
            android:id="@+id/uploadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload MRI Scan"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/uploadSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your MRI scan image"
            android:textSize="20sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- File Choose Button -->
        <Button
            android:id="@+id/chooseFileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose File"
            android:backgroundTint="#BBDEFB"
            android:textColor="#000000"
            android:layout_marginBottom="18dp"
            android:textSize="20sp"/>

        <!-- Selected File Text -->
        <TextView
            android:id="@+id/selectedFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No file chosen"
            android:textSize="20sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="12dp" />

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:contentDescription="MRI scan preview" />

        <!-- Analyze Button -->
        <Button
            android:id="@+id/analyzeScanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/analyze_scan"
            android:backgroundTint="#64748B"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>
