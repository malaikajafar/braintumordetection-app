<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/image">

    <!-- Title -->
    <TextView
        android:id="@+id/analysisTitle"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/analysis_results"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"/>

    <!-- Analysis Complete -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp"
        android:padding="2dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/img"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="4dp"
            android:text="Analysis Complete Brain tumor detected with 92% confidence"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <!-- Feedback Button -->
        <Button
            android:id="@+id/feedbackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Feedback"
            android:textSize="14sp"
            android:backgroundTint="#BBDEFB"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Primary Findings Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="#444444"
        android:layout_marginBottom="20dp"
        android:elevation="4dp"
        android:background="@drawable/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary Findings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingBottom="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Tumor size: 2.3cm x 1.8cm\n• Location: Frontal lobe\n• Type: Likely glioblastoma"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            android:paddingBottom="26dp"/>
    </LinearLayout>

    <!-- Recommendations Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="22dp"
        android:elevation="4dp"
        android:background="@drawable/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommendations"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingBottom="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Immediate medical consultation\n• Further diagnostic tests needed\n• Treatment planning recommended"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            android:paddingBottom="22dp"/>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="40dp">

        <Button
            android:id="@+id/viewStagesButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="#BBDEFB"
            android:text="View Stages"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/treatmentOptionsButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:backgroundTint="#BBDEFB"
            android:text="Treatment Options"
            android:textColor="#000000"
            android:textSize="18sp" />



    </LinearLayout>

</LinearLayout>
